
<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/map"
    tools:context="hexoskin.app.maps.MapsActivity"
    android:name="com.google.android.gms.maps.SupportMapFragment">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#805882FA">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView23"
            android:layout_column="0"
            android:height="10dp"
            android:textColor="#8C000000"/>
    </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#805882FA">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance effectuée"
                android:id="@+id/textView"
                android:layout_column="0"
                android:textSize="18dp"
                android:height="30dp"
                android:paddingLeft="10dp"
                android:textColor="#8C000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 km"
                android:id="@+id/textViewDistance"
                android:layout_column="4"
                android:textSize="17dp"
                android:textColor="#8C000000"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#805882FA">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temps écoulé"
                android:id="@+id/textViewTimeElapsed"
                android:layout_column="0"
                android:textSize="18dp"
                android:height="30dp"
                android:paddingLeft="10dp"
                android:textColor="#8C000000"/>

            <Chronometer
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chronometer"
                android:layout_column="4"
                android:textSize="17dp"
                android:textColor="#8C000000"/>
        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#805882FA">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calories brûlées"
                android:id="@+id/textView3"
                android:layout_column="0"
                android:textSize="18dp"
                android:height="30dp"
                android:paddingLeft="10dp"
                android:textColor="#8C000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 calories"
                android:id="@+id/textViewCaloriesBurnedMaps"
                android:layout_column="4"
                android:textSize="17dp"
                android:textColor="#8C000000"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#805882FA">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_column="0"
                android:height="30dp"
                android:text="Avg. meter/min"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:textColor="#8C000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewMoyMinKm"
                android:text="0 min"
                android:layout_column="4"
                android:height="30dp"
                android:textSize="18dp"
                android:textColor="#8C000000"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#805882FA">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_column="0"
                android:height="10dp"
                android:textColor="#8C000000"/>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#805882FA">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonPause"
                android:layout_column="0"
                android:textSize="18dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/buttonstyle"
                android:src="@android:drawable/ic_media_pause" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonStop"
                android:layout_column="2"
                android:textSize="18dp"
                android:background="@drawable/buttonstyle"
                android:src="@android:drawable/ic_menu_close_clear_cancel" />
        </TableRow>
    </TableLayout>

    </fragment>

